# Application Configuration
APP_NAME=AI Elderly Medicare System
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/medicare_db
# For SQLite: DATABASE_URL=sqlite:///./medicare.db

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=medicare@yourdomain.com

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# AI/ML API Keys
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/medicare.log

# File Storage
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216

# Payment Gateway (if applicable)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key