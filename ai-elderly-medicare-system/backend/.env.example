# AI Elderly Medicare System - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AI Elderly Medicare System
VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (for development)
DATABASE_URL=sqlite:///./elderly_medicare.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/elderly_medicare

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/elderly_medicare

DATABASE_ECHO=False

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure secret key for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# =============================================================================
# AI/ML API KEYS
# =============================================================================
# OpenAI API Key (for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face API Key (for ML models)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ML Model Storage Path
ML_MODEL_PATH=./ml_models

# =============================================================================
# HEALTHCARE API INTEGRATIONS
# =============================================================================
# FHIR Server Configuration
FHIR_SERVER_URL=https://your-fhir-server.com/fhir

# Medicare API Configuration
MEDICARE_API_KEY=your-medicare-api-key
MEDICARE_API_URL=https://api.medicare.gov

# Drug Database API
DRUG_API_KEY=your-drug-database-api-key
DRUG_API_URL=https://api.fda.gov/drug

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Email Templates
EMAIL_FROM_NAME=AI Medicare System
EMAIL_FROM_ADDRESS=noreply@ai-medicare-system.com

# =============================================================================
# SMS CONFIGURATION
# =============================================================================
# Twilio Settings
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative SMS Provider
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./static/uploads
ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.docx,.txt

# =============================================================================
# REDIS CONFIGURATION (for Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRE_SECONDS=3600

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Push Notifications
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id

# Maps and Location Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
ADMIN_PANEL_URL=http://localhost:3001

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=elderly-medicare-backups

# Local Backup Settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=sqlite:///./test_elderly_medicare.db
TEST_EMAIL_BACKEND=console
TEST_SMS_BACKEND=console

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Auto-reload on code changes
RELOAD=True

# Enable debug toolbar
DEBUG_TOOLBAR=True

# Profiling
ENABLE_PROFILING=False

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL/TLS
USE_SSL=False
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Security Headers
SECURITY_HEADERS_ENABLED=True

# =============================================================================
# COMPLIANCE AND PRIVACY
# =============================================================================
# HIPAA Compliance
HIPAA_COMPLIANT=True
AUDIT_LOG_ENABLED=True
DATA_ENCRYPTION_ENABLED=True

# Privacy Settings
COOKIE_SECURE=True
COOKIE_HTTPONLY=True
COOKIE_SAMESITE=Strict

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable Features
ENABLE_AI_FEATURES=True
ENABLE_TELEMEDICINE=True
ENABLE_MEDICATION_REMINDERS=True
ENABLE_HEALTH_MONITORING=True
ENABLE_FAMILY_ACCESS=True

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Electronic Health Records
EHR_INTEGRATION_ENABLED=False
EHR_API_URL=https://your-ehr-system.com/api
EHR_API_KEY=your-ehr-api-key

# Pharmacy Integration
PHARMACY_API_URL=https://pharmacy-api.com
PHARMACY_API_KEY=your-pharmacy-api-key

# Insurance Verification
INSURANCE_API_URL=https://insurance-verification.com/api
INSURANCE_API_KEY=your-insurance-api-key

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
MOBILE_API_VERSION=v1
MOBILE_APP_STORE_URL=https://apps.apple.com/your-app
MOBILE_PLAY_STORE_URL=https://play.google.com/store/apps/your-app

# =============================================================================
# ANALYTICS AND REPORTING
# =============================================================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Custom Analytics
ANALYTICS_ENABLED=True
ANALYTICS_API_KEY=your-analytics-api-key

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Default notification preferences
DEFAULT_EMAIL_NOTIFICATIONS=True
DEFAULT_SMS_NOTIFICATIONS=False
DEFAULT_PUSH_NOTIFICATIONS=True

# Notification rate limits
MAX_NOTIFICATIONS_PER_HOUR=10
MAX_SMS_PER_DAY=5

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================
DEFAULT_TIMEZONE=UTC
SUPPORTED_LANGUAGES=en,es,fr
DEFAULT_LANGUAGE=en

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Cache Settings
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=elderly_medicare

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# API Documentation
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Development Server
DEV_SERVER_RELOAD=True
DEV_SERVER_PORT=8000